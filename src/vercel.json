{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
{
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/login", "destination": "/index.html" },
    { "source": "/register", "destination": "/index.html" },
    { "source": "/lobby", "destination": "/index.html" },
    { "source": "/create-room", "destination": "/index.html" },
    { "source": "/join-room", "destination": "/index.html" },
    { "source": "/room/:roomId", "destination": "/index.html" },
    { "source": "/round/:roomId", "destination": "/index.html" },
    { "source": "/voting/:roomId", "destination": "/index.html" },
    { "source": "/leaderboard/:roomId", "destination": "/index.html" },
    { "source": "/profile", "destination": "/index.html" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
